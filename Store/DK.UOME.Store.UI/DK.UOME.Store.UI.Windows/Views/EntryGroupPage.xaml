            Padding="10,0,0,60"
            ItemsSource="{Binding EntryGroup.Items}"
            ItemTemplate="{StaticResource CompactEntryTemplate}"
            SelectionMode="Multiple" 
            IsItemClickEnabled="True" 
			ItemClick="OnEntryItemClicked"/>-->

